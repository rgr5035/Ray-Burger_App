<h1>It's Burger Time!</h1>

<div class="container" id="img-container">
    <img src="./assets/img/burger.png" id="burger-img" class="rounded mx-auto d-block" alt="burger">
</div>

<div class="container">
  <div class="row">
    <div class="col-6" id="not-devoured">
        <ul class="list-group list-group-flush">
            {{#each burgers}}
            <li class="list-group-item">{{this.burger_name}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="col-6" id="devoured">
        <ul class="list-group list-group-flush">
            {{#each burgers}}
            <li class="list-group-item">{{this.burger_name}}</li>
            {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <h2>Add A Burger!</h2>
  </div>

<form id="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>
    
    <button type="submit">Add Burger</button>

</form>
</div>


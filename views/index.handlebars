<main class ="container" id="main-container">


<h1>It's Burger Time!</h1>

<div class="container" id="img-container">
    <img src="./assets/img/burger.png" id="burger-img" class="rounded mx-auto d-block" alt="burger">
</div>


<div class="container">
  <div class="row">
    <div class="col-6" id="not-devoured">
        <ul class="list-group list-group-flush">
            {{#each burgers}}
            
            <li 
                class="list-group-item d-flex justify-content-between align-items-center">{{this.burger_name}}
                <button type="button" class="btn btn-outline-danger rounded-pill">
                    Devour It!
                </button>    
            </li>
            
            {{/each}}
        </ul>
    </div>
    <div class="col-6" id="devoured">
        <ul class="list-group list-group-flush">
            {{#each burgers}}
            
            <li 
                class="list-group-item d-flex justify-content-between align-items-center">{{this.burger_name}}
                <span class="badge bg-success rounded-pill">Devoured!</span>
            </li>
            
            {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <h2>Add A Burger!</h2>
  </div>

<form id="create-form">

    <div class="form-group">
        <textarea type="text" id="add-burger" class="form-control text-center floatingTextarea" name="burger_name" placeholder="Burger Name Here"></textarea>
    </div>
    
    <button type="button" class="btn btn-success" id="submit-btn">Add Burger</button>

</form>
</div>

</main>

